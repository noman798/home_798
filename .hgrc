[ui]

username = undefined <undefined@xpure.com>
merge = internal:merge

verbose = True
ssh = ssh -i ~/.ssh/id_rsa -C
ignore = ~/.hgignore


[merge-tools]
mymergetool.premerge = True

[extensions]
mercurial_keyring =
hgext.purge=
color=
hgext.fetch=
hgext.graphlog =
progress =
bookmarks =
hgext.bookmarks=

[web]
cacerts = /etc/ssl/certs/ca-certificates.crt

[color]
status.modified = blue underline red_background
status.added = green
status.removed = red blue_background
status.deleted = cyan underline
status.unknown = magenta underline
status.ignored = black

diff.diffline =
diff.extended = cyan
diff.file_a = red
diff.file_b = green
diff.hunk = magenta
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = red_background

[alias]
blame = annotate --user --number
bdiff = diff -r "max(ancestors('$1') and branch(default)):'$1'"
